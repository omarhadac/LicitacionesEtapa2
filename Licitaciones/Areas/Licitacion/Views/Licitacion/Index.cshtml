            function configurarInicio() {
                loadOrganismo($('#selectOrganismo'), true);
                loadEtapa($('#selectEtapa'), true);
                buscar();
                //loadDepartamentoPopup($('#selectPpDepartamento'), false);
                //loadTipoContratacionPopup($('#selectPpTipoContratacion'), false);
            };

            function loadEtapa(control, seleccionar) {
                var select = control;
                select.empty();

                if (seleccionar) {
                    select.append($('<option/>', { value: '0', text: '--Seleccione--' }));
                }

                var urltmp = "/api/Etapa/Listar";
                fetch(urltmp, { method: "GET" })
                    .catch(() => {
                        alert('Ocurrio un error');
                    })
                    .then(res => res.json())
                    .then(data => {
                        $.each(data.replay, function (index, result) {
                            select.append($('<option/>', {
                                value: result.id,
                                text: result.nombre
                            }));
                        });
                    })
            }

            function loadOrganismo(control, seleccionar) {
                var select = control;
                select.empty();

                if (seleccionar) {
                    select.append($('<option/>', { value: '0', text: '--Seleccione--' }));
                }

                var urltmp = "/api/Organismo/Listar";
                fetch(urltmp, { method: "GET" })
                    .catch(() => {
                        alert('Ocurrio un error');
                    })
                    .then(res => res.json())
                    .then(data => {
                        $.each(data.replay, function (index, result) {
                            select.append($('<option/>', {
                                value: result.id,
                                text: result.nombre
                            }));
                        });
                    })
            }
            $('#btnLimpiar').click(function () {
                limpiarFiltros();
            });
            function limpiarFiltros() {
                if ($('#idEmpresa').val() != 0) {
                    $('#txtNroExpediente').val('');
                    $('#txtNombreObra').val('');
                    $('#txtFechaPublic').val('');
                    $('#selectOrganismo').val('');
                    $('#selectEtapa').val('');
                    $('#txtNroObra').val('');
                    configurarInicio();
                    idEstadoReporte = 0;
                }
                else {
                    window.location.href = "/racop";
                }
            };
        });
