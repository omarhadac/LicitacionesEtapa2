            $('#tablaObra').DataTable().destroy();

            cargarTarjeta();

            var url = "/api/Licitacion/listarObra?";
            url = url + "nroExpediente=" + $('#txtNroExpediente').val();
            url = url + "&nombreObra=" + $('#txtNombreObra').val();
            url = url + "&fechaPub=" + $('#txtFechaPublic').val();
